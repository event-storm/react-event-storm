{
  "name": "react-event-storm",
  "version": "0.0.6",
  "description": "React wrapper for event-store library",
  "main": "./index.js",
  "scripts": {
    "bundle": "rollup -c",
    "build": "rimraf ./dist && yarn run bundle",
    "publish-lib": "yarn run build && cd dist && yarn publish"
  },
  "keywords": [
    "hooks",
    "store",
    "event-sourcing",
    "react-event-store",
    "store-management"
  ],
  "author": "artur93gev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/event-storm/react-event-storm.git"
  },
  "homepage": "https://github.com/event-store/react-event-store#readme",
  "bugs": {
    "url": "https://github.com/event-store/react-event-store/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "event-storm": "^0.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.8",
    "react": ">=16.8.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.0",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-uglify-es": "^0.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}